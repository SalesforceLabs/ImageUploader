<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Image Uploader</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <supportedFormFactors>
                <supportedFormFactor type="Small" />
                <supportedFormFactor type="Large" />
            </supportedFormFactors>
            <property
        name="appName"
        type="String"
        default="画像アップロード"
        required="true"
        label="カスタムコンポーネント表示ラベル"
      />
            <property
        name="pageSize"
        type="Integer"
        default="10"
        min="1"
        max="50"
        required="true"
        label="1ページ内の表示件数"
      />
            <property
        name="sortFieldApi"
        type="String"
        default="LastModifiedDate"
        label="並び替え項目"
        datasource="apex://RSIUC_getContentDocumentFieldForOption"
      />
            <property name="defaultSort" type="String" default="降順" label="並替え順" datasource="昇順,降順" />
            <property
        name="targetUrlField"
        type="String"
        default="なし"
        label="自動登録URLフィールド"
        datasource="apex://RSIUC_getUrlFieldForOption"
      />
            <property
        name="selectedSvgIconType"
        type="String"
        default="リスト表示"
        label="デフォルトのリストタイプ"
        datasource="最大表示,リスト表示"
      />
            <property
        name="acceptedFormatList"
        type="String"
        default="jpg,jpeg,png,ppt,pptx,xls,xlsx,doc,docx,pdf"
        label="アップロードを許可する拡張子"
      />
            <property name="isHideUpload" type="Boolean" default="false" label="ファイルアップロードを非表示にする" />
            <property name="isHideSearchArea" type="Boolean" default="false" label="検索エリアを非表示にする" />
            <property name="isHideFileEdit" type="Boolean" default="false" label="ファイル選択ボタンを非表示にする" />
            <property name="isHideDelete" type="Boolean" default="false" label="削除ボタンを非表示にする" />
            <property name="isHideUrlItem" type="Boolean" default="false" label="URL保存項目の設定を非表示にする" />
            <property name="isHideShareButton" type="Boolean" default="false" label="共有切替ボタンを非表示にする" />
            <property
        name="isHideEditNameModal"
        type="Boolean"
        default="false"
        label="ファイル名変更の設定を無効にする"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
